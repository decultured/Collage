<?xml version="1.0" encoding="utf-8"?>
<clg:ClipView xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:clg="Collage.Clip.*"
	backgroundColor="0x000000"
	backgroundAlpha="0"
	horizontalScrollPolicy="off"
	verticalScrollPolicy="off"
	creationComplete="Initialize()" >
	
	<mx:Script>
		<![CDATA[
        import mx.collections.ArrayCollection;
		import mx.events.PropertyChangeEvent;

		protected function Initialize():void
		{
			var bitmap:Bitmap = displayImage.content as Bitmap;
			if (bitmap != null && bitmap.smoothing == false) {
			    bitmap.smoothing = true;
			}
		}
		
		protected override function onModelChange( event:PropertyChangeEvent):void
		{
			var barChartModel:BarChartClip = _Model as BarChartClip;
			setStyle("backgroundColor", barChartModel.backgroundColor);
			setStyle("backgroundAlpha", barChartModel.backgroundAlpha);
			super.onModelChange(event);
		}
		]]>
    </mx:Script>
	<mx:Image id="displayImage" horizontalAlign="left" verticalAlign="top" top="0" left="0" right="0" bottom="0" source="@Embed('../../../../assets/barchart.png')" />
</clg:ClipView>